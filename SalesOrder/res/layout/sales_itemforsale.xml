<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expanz="http://schemas.android.com/apk/res/com.expanz"
    android:id="@+id/salesitemforsale"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <!-- widgets -->

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:expanz="http://schemas.android.com/apk/res/com.expanz"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1" >

        <TableRow >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_span="2"
                android:orientation="horizontal"
                android:weightSum="1" >

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#666666" />

                <com.expanz.widget.ImageButtonEx
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    expanz:method_name="Delete"
                    android:src="@drawable/ic_tab_delete" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#666666" />

                <com.expanz.widget.ImageButtonEx
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    expanz:method_name="Save"
                    android:src="@drawable/ic_tab_save" />
            </LinearLayout>
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="15dp"
                android:layout_span="2"
                android:background="#ff9933" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="Name"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="Name"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="Name"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="Description"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="Description"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="Description"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="Price"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="Price"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="Price"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="QuantityUnit"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="QuantityUnit"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="QuantityUnit"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>
    </TableLayout>

</ScrollView>