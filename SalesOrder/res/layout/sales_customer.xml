<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expanz="http://schemas.android.com/apk/res/com.expanz"
    android:id="@+id/salescustomer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <!-- widgets -->

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:expanz="http://schemas.android.com/apk/res/com.expanz"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1" >

        <TableRow >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_span="2"
                android:orientation="horizontal"
                android:weightSum="1" >

                <com.expanz.widget.lmageUploadImageButtonEx
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    expanz:assoc_field_id="CustomerPhoto"
                    android:background="@null"
                    expanz:field_id="CustomerPhotoButton"
                    expanz:file="photo.jpg"
                    android:src="@drawable/ic_tab_camera" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#666666" />

                <com.expanz.widget.EmailImageButtonEx
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    expanz:field_id="Email"
                    android:src="@drawable/ic_tab_email" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#666666" />

                <com.expanz.widget.CallImageButtonEx
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    expanz:field_id="Phone"
                    android:src="@drawable/ic_tab_phone" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#666666" />

                <com.expanz.widget.ImageButtonEx
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    expanz:method_name="Delete"
                    android:src="@drawable/ic_tab_delete" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#666666" />

                <com.expanz.widget.ImageButtonEx
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    expanz:method_name="Save"
                    android:src="@drawable/ic_tab_save" />
            </LinearLayout>
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:layout_marginBottom="15dp"
                android:layout_span="2"
                android:background="#ff9933" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                expanz:field_id="CustomerPhoto"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="CustomerPhoto"
                android:textSize="14sp" />

            <com.expanz.widget.ImageViewEx
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/image_border"
                expanz:field_id="CustomerPhoto"
                android:maxWidth="180dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="FirstName"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="FirstName"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="FirstName"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="LastName"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="LastName"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="LastName"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="Phone"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="Phone"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="Phone"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="Email"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="Email"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="Email"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="Discount"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="Discount"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="Discount"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

        <TableRow >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_span="2"
                android:background="#666666" />
        </TableRow>

        <TableRow >

            <com.expanz.widget.TextViewEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                expanz:field_id="Company"
                android:paddingBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="3dp"
                android:text="Company"
                android:textSize="14sp" />

            <com.expanz.widget.EditTextEx
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                expanz:field_id="Company"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />
        </TableRow>

    </TableLayout>

</ScrollView>